<Page x:Class="WpfCoinApp.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfCoinApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">
    <StackPanel>
        <TextBlock x:Name="SearchBox" Width="200" Margin="10"/>
        <Button Content="Search" Click="Search_Click" Width="100" Margin="10"/>
        <ListView x:Name="CurrencyList" MouseDoubleClick="CurrencyList_MouseDoubleClick"/>
    </StackPanel>
</Page>
